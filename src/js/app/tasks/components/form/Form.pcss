@import '../../../Variables.pcss';


    .Form {
        background-color: $primary-color;
        
        .body {
            background-color: #ffffff;
 
            min-height: 100vh;
            margin: 0 auto;
            
            width: 1000px;
 
            .message {
                padding: 10px 20px 20px;
            }

            .panel-body {
                padding: 10px 20px 0;
                width: 1000px;
                .panel-footer {
                    text-align: right;
                    margin: 10px -20px 0;
                }
            }

            .sv_next {
                background-color: $primary-color;
                color: white;
            }

            .sv_next_btn, .sv_complete_btn {
                background-color: $primary-color;
                color: white;
            }

            .btn-secondary {
                    margin-left:5px;
    box-shadow: 0.5px 0.5px 0.5px 0.5px #BFBFBF;
    background-color: white;
    color: $description-grey;
    border: 1px solid #BDC3C7;
    font-size: 15px;
    height: 40px;
    .hover {
        background-color: $description-grey;
    }

            }
            span { word-break: keep-all; }


            
    }
               .Side {
                width: 10vw;
                padding-left: 20px;
                padding-right: 20px;
                padding-bottom: 20px;
                margin-top: 20px;
                position:absolute;
                top: 5%;
                right: 1%;
                background-color: #ffffff;

                h3 {
                font-size: 20px;

            }
        }

    
    
}