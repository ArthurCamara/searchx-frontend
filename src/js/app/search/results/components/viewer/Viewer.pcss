@import '../../../../Variables.pcss';

.modal {
    display: block;
    position: fixed; /* Stay in place */
    padding-top: 100px; /* Location of the box */
    left: 0;
    top: 0;
    width: 100%; /* Full width */
    height: 100%; /* Full height */
    overflow: auto; /* Enable scroll if needed */
    background-color: rgb(0,0,0); /* Fallback color */
    background-color: rgba(0,0,0,0.4); /* Black w/ opacity */

    .content {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        border: 1px solid #888;
        background-color: #fefefe;
        width: 95%;
        height: 90%;

        .header {
            padding: 10px;
            border-bottom: 1px solid $border-color;
            box-shadow: 0px 0px 15px 0px rgba(50, 50, 50, 0.04);

            .forward {
                color: gray;
                float: right;
                cursor: pointer;
                padding-right: 10px;
            }

            .close {
                color: red;
                float: right;
                font-size: 20px;
                font-weight: bold;
                margin-bottom: 10px;

                &:hover,
                &:focus {
                    color: #000;
                    text-decoration: none;
                    cursor: pointer;
                }
            }
        }

        .body {
            display: flex;
            height: 95%;
            width: 100%;

            .page {
                width: 80%;
                background-color: gray;

                display: flex;
                flex-direction: column;
                justify-content: center;

                #modal-loader {
                    position: relative;
                    top: 50%;

                    .loader {
                        position: relative;
                    }
                }

                iframe {
                    height: 100%;
                    width: 100%;
                }

                img {
                    display: block;
                    margin: 0 auto;
                    max-height: 100%;
                    max-width: 100%;
                }
            }

            .sidebar {
                width: 20%;
                padding: 15px;
            }
        }
    }
}