@import '../../../../Variables.pcss';

.Suggestions {
    position: absolute;
    z-index: 3;
    top: 63px;
    width: 650px;

    .SuggestionItem {
        z-index: 3;
        border: 1px solid #BDC3C7;
    }
}

.ClickLayer {
    position: fixed;
    z-index: 2;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
}

.ColorBar {
    position: absolute;
    height: 36px;
    border-radius: 3px;
}

.ColorBarSingle {
    background-color: #FFBBBB;
    z-index: -2;
}

.ColorBarGroup {
    background-color: #FFDDDD;
    z-index: -1;
}

.ColorBarTotal {
    background-color: #BBFFBB;
    z-index: -3;
}

.SuggestionItem {
    padding: 0;
}

.TextArea {
    margin: 10px 15px 10px 15px;
}