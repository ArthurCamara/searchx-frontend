@import '../../../Variables.pcss';

.SearchHeader {
    display: inline-block;
    padding: 15px 15px 0 15px;
    margin: 0;
    width: 100%;

    background-color: $header-grey;
    box-shadow: 0 0 15px 0 rgba(50, 50, 50, 0.05);
    border-bottom: 1px solid $border-color;

    .logo {
        margin-top: -10px;
        margin-right: 15px;
        padding: 0;
        width: 160px;
        float: left;

        .image {
            height: 80px;
            background: url('/img/searchx_logo_bing.png') no-repeat center center;
            background-size: contain;
        }
    }

    .form {
        max-width: 650px;
        width: 100%;
        float: left;

        .box {
            width: 100%;
            height: 50px;

            margin-top: 5px;
            padding-top: 0;
            padding-bottom: 0;

            input {
                border-radius: 0;
                box-shadow: #000;
                color: #000;
                height: 44px;
            }

            button {
                color: #fff;
                background-color: $primary-color;

                width: 47px;
                height: 44px;

                &:hover, &:focus {
                    color: #fff;
                    text-decoration: none;
                }

            }
        }

        .verticals {
            padding-top: 15px;

            ul {
                float:left;
                list-style: none;
                width:100%;
                padding-left:0;
                margin-bottom: 0;
            }

            .item {
                float:left;
                padding-left: 15px;
                padding-right: 15px;
                padding-bottom: 10px;
                cursor: pointer;
                color: dimgray;

                &:hover {
                    color: $primary-color;
                }
            }

            .active {
                font-weight: 600;
                color: $primary-color;
                border-bottom: 4px solid $primary-color;
            }
        }
    }
}